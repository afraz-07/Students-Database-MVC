@model Project_College.Student



@{
    ViewBag.Title = "Create";
   
}



<div id="form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h3 class="mt-4 mb-4" style="text-align:center">Create Student Profile</h3>

        <div class="container h-100 ms-2">
            <div class="row align-items-center h-100">
                <div class="col-sm-4 offset-sm-4">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row mb-0">
                        <br />
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-5 name" })
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control p" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        <br />
                        @Html.LabelFor(model => model.DOB, htmlAttributes: new { @class = "control-label col-md-5 name" })
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control datepicker" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-5 name" })
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })<br />
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.Gender, "Male", new { @name = "Gender" })
                                Male
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.Gender, "Female", new { @name = "Gender" })
                                Female
                            </label>


                        </div>
                    </div>

                    <div class="row mb-0">
                        @Html.LabelFor(model => model.MobileNumber, htmlAttributes: new { @class = "control-label col-md-5 name" })
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-5 name" })
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        @Html.LabelFor(model => model.HSC_Percentage, htmlAttributes: new { @class = "control-label col-md-5 name" })
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.HSC_Percentage, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.HSC_Percentage, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        <label class="control-label col-md-5  name">
                            Departments
                        </label>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })<br />
                            @Html.DropDownListFor(model => model.DeptId, ViewBag.Select as SelectList, "Select Department", new { @class = "from-control" })<br />


                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 mt-5 mb-7">
                            <input type="submit" value="Create" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>


<style>
    select {
        width: 190px;
        height: 30px;
    }

    input[type=submit] {
        position: relative;
        left: 140px
    }

    .name {
        padding-top: 22px;
    }

    input[type=text] {
        background-color: lightgray;
        border: 1px solid black;
        border-radius: 2px;
    }

    select {
        background-color: lightgray;
        border: 1px solid black;
        border-radius: 2px;
    }

    #form {
        border: 1px solid grey;
        padding-bottom: 8vh;
        margin-top: 8vh;
        background-image: url(https://wallpapers.com/images/featured-full/light-grey-background-3rpc9nmamj0y6ff7.jpg);
        background-position: center;
        background-size: cover;
    }
</style>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
