@model Project_College.Student



@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h3 class="mt-4 mb-4">Create Student Profile</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row mb-3">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.DOB, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control datepicker" } })

            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.Gender, "Male", new { @name = "Gender" })
                    Male
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.Gender, "Female", new { @name = "Gender" })
                    Female
                </label>


            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.MobileNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.HSC_Percentage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.HSC_Percentage, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.HSC_Percentage, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="row mb-3">
            <label class="control-label col-md-2">
                Departments
            </label>
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })
                @Html.DropDownListFor(model => model.DeptId, ViewBag.Select as SelectList, "Select Department", new { @class = "from-control" })<br />


            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-4 mb-7">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </div>
    </div>
}


<style>
    select {
        width: 190px;
        height: 30px;
    }

    input[type=submit] {
        position: relative;
        left: 140px
    }
</style>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>