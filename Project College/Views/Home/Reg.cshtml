@model Project_College.Staff

@{
    ViewBag.Title = "Reg";
    
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="form">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h3 class="mt-4 mb-4" style="text-align:center">Staff Register</h3>


        <div class="container h-100 ms-4">
            <div class="row align-items-center h-100">
                <div class="col-sm-4 offset-sm-4">


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row mb-0">
                        @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-3 name" })
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3 name" })
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>


                    <div class="row mb-0">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-3 name " })
                        <div class="col-md-8">
                            <label class="radio-inline">
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })<br />
                                @Html.RadioButtonFor(model => model.Gender, "Male", new { @name = "Gender" })
                                Male
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.Gender, "Female", new { @name = "Gender" })
                                Female
                            </label>


                        </div>
                    </div>

                    <div class="row mb-0">
                        @Html.LabelFor(model => model.MobileNumber, htmlAttributes: new { @class = "control-label col-md-3 name" })
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3 name" })
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })<br />
                            @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3 name" })
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })<br />
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="row mb-0">
                        <label class="control-label col-md-3  name">
                            Departments
                        </label>
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })<br />
                            @Html.DropDownListFor(model => model.DeptId, ViewBag.Select as SelectList, "Select Department", new { @class = "from-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Create" class="btn btn-primary offset-sm-5 mt-4" />
                        </div>
                    </div>


                </div>
            </div>
        </div>

    }
</div>


        <style>
            select {
                width: 190px;
                height: 30px;
            }

            .name {
                padding: 24px 20px 0 0;
            }

            #form {
                border: 1px solid blue;
                padding-bottom: 8vh;
                margin-top: 8vh;
                background-image: url(https://d8z2144xrsaxf.cloudfront.net/2020/07/image-amboss-2020-462x244.jpg);
                background-position: center;
                background-size: cover;
            }
        </style>

        <script src="~/Scripts/jquery-3.7.0.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

