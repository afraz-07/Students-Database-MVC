<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body style="padding-top:0">
    <nav class="navbar navbar-expand-lg navbar-dark @(ViewBag.NavbarColorClass)">
        <div class="container-fluid">
            <a class="navbar-brand light fs-4" href="#">Mazharul Uloom College</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item nav-link active">
                        @Html.ActionLink("Home", "Index", "Home", new { @class = "Navlink" })
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Create", "Create", "Home", new { @class = "Navlink" })
                        </li>
                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Records", "Read", "Home", new { @class = "Navlink" })
                        </li>
                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Logout", "Logout", "Home", new { @class = "Navlink" })
                        </li>

                    }
                    else
                    {
                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Register", "Reg", "Home", new { @class = "Navlink" })
                        </li>

                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Login", "Login", "Home", new { @class = "Navlink" })
                        </li>
                    }










                </ul>
            </div>
        </div>
    </nav>

    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MUC Application</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/Custom.js"></script>


    <style>
        .Navlink {
            color: white;
            padding: 0 20px;
            text-decoration: none;
        }

    </style>
</body>
</html>